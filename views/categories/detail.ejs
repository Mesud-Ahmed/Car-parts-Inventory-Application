
<div class="detail-card">
  <h2><%= category.name %></h2>
  <p><%= category.description %></p>

  <h3>Items in this category</h3>
  <% if (items.length === 0) { %>
    <p>No items yet.</p>
  <% } else { %>
    <ul>
      <% items.forEach(item => { %>
        <li><%= item.name %> — $<%= item.price %></li>
      <% }) %>
    </ul>
  <% } %>

  <hr>

  <div class="action-buttons">
    <a href="/categories/<%= category.id %>/update" class="button-link">✏️ Edit</a>
    <a href="/categories/<%= category.id %>/delete" class="button-link" style="background-color:#dc2626;">🗑 Delete</a>
    <a href="/categories" class="button-link button-back">⬅️ Back</a>
  </div>
</div>
